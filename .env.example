# =============================================================================
# FAANG Job Scraper Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=FAANG Job Scraper
APP_VERSION=1.0.0
APP_DESCRIPTION=Modular FAANG job scraping system with FastAPI and plug-and-play architecture
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Database Settings (Future Migration)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/jobs.db
# For PostgreSQL: postgresql://user:password@localhost/faang_jobs
# For MySQL: mysql+pymysql://user:password@localhost/faang_jobs

# -----------------------------------------------------------------------------
# Data Storage Settings
# -----------------------------------------------------------------------------
DATA_STORAGE_PATH=./data/jobs.json
DATA_BACKUP_PATH=./data/backups/
DATA_MAX_BACKUPS=10
DATA_COMPRESSION=true

# -----------------------------------------------------------------------------
# Scraping Settings
# -----------------------------------------------------------------------------
SCRAPE_INTERVAL_MINUTES=60
MAX_CONCURRENT_SCRAPERS=3
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_COOLDOWN_SECONDS=60

# -----------------------------------------------------------------------------
# Browser/WebDriver Settings
# -----------------------------------------------------------------------------
BROWSER_TYPE=chrome
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
BROWSER_WINDOW_SIZE=1920x1080
WEBDRIVER_PATH=auto
CHROME_BINARY_PATH=
FIREFOX_BINARY_PATH=

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE_PATH=./logs/scraper.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5
LOG_CONSOLE_OUTPUT=true

# -----------------------------------------------------------------------------
# Job Processing Settings
# -----------------------------------------------------------------------------
MAX_JOBS_PER_COMPANY=100
JOB_DEDUPLICATION=true
JOB_DATA_RETENTION_DAYS=30
MIN_JOB_DESCRIPTION_LENGTH=50
MAX_JOB_DESCRIPTION_LENGTH=10000

# -----------------------------------------------------------------------------
# Company-Specific Settings
# -----------------------------------------------------------------------------
ENABLE_META_SCRAPING=true
ENABLE_AMAZON_SCRAPING=true
ENABLE_APPLE_SCRAPING=true
ENABLE_NETFLIX_SCRAPING=true
ENABLE_GOOGLE_SCRAPING=true

# -----------------------------------------------------------------------------
# Proxy Settings (Optional)
# -----------------------------------------------------------------------------
USE_PROXY=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_TYPE=http

# -----------------------------------------------------------------------------
# Cache Settings
# -----------------------------------------------------------------------------
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# -----------------------------------------------------------------------------
# Monitoring and Health Checks
# -----------------------------------------------------------------------------
HEALTH_CHECK_INTERVAL_MINUTES=5
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# Email Notifications (Optional)
# -----------------------------------------------------------------------------
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
NOTIFICATION_EMAIL_FROM=
NOTIFICATION_EMAIL_TO=

# -----------------------------------------------------------------------------
# Webhook Notifications (Optional)
# -----------------------------------------------------------------------------
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEBUG_MODE=false
MOCK_SCRAPING=false
ENABLE_PROFILING=false
SAVE_SCRAPED_HTML=false
SCRAPED_HTML_PATH=./data/html_dumps/

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
API_KEY=your-secret-api-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Testing Settings
# -----------------------------------------------------------------------------
TEST_DATABASE_URL=sqlite:///./test_data/test_jobs.db
TEST_DATA_PATH=./test_data/
PYTEST_TIMEOUT=30